<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jobAdTV"
            android:textSize="20sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companyTV"
            android:layout_below="@id/jobAdTV"/>

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/typeImageIV"
            android:layout_below="@id/companyTV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeTV"
            android:layout_below="@id/companyTV"
            android:layout_toRightOf="@id/typeImageIV"/>

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/locationImageIV"
            android:layout_below="@id/typeImageIV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationTV"
            android:layout_below="@id/typeTV"
            android:layout_toRightOf="@id/locationImageIV"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </ImageView>

</RelativeLayout>