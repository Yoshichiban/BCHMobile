<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="120sp"
    android:padding="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jobAdTV"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companyTV"
            android:layout_below="@id/jobAdTV"
            android:layout_toStartOf="@+id/logo"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeTV"
            android:textAlignment="textStart"
            android:layout_toRightOf="@+id/typeImageIV"
            android:layout_below="@+id/companyTV"
            android:textSize="12sp"
            android:singleLine="true" />

        <ImageView
            android:layout_width="15sp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_agenda"
            android:id="@+id/typeImageIV"
            android:layout_below="@id/companyTV"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/typeTV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationTV"
            android:textAlignment="textStart"
            android:layout_below="@+id/typeTV"
            android:layout_toRightOf="@+id/locationImageIV"
            android:textSize="12sp"
            android:singleLine="true" />

        <ImageView
            android:layout_width="15sp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_compass"
            android:id="@+id/locationImageIV"
            android:layout_below="@+id/typeImageIV"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/locationTV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_below="@id/locationImageIV"
            android:layout_toStartOf="@+id/logo"
            android:layout_alignParentStart="true"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10sp"
            android:layout_alignBottom="@+id/date">
        </ImageView>

</RelativeLayout>