<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bchlogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bchlogo"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="65%"
        android:contentDescription="@string/logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/bchlogo"
        android:layout_alignLeft="@+id/bchlogo"
        android:layout_alignStart="@+id/bchlogo"
        android:hint="@string/email_address"
        android:layout_alignRight="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:layout_marginBottom="10sp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:hint="@string/password"
        android:layout_marginBottom="10sp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:id="@+id/signin"
        android:onClick="login"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:textStyle="bold"
        android:textColor="#fff"
        android:typeface="sans"
        android:background="#51a460"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="10sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:id="@+id/signup"
        android:onClick="login"
        android:layout_alignStart="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:textStyle="bold"
        android:textColor="#fff"
        android:typeface="sans"
        android:background="#51a460"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false" />

</android.support.percent.PercentRelativeLayout>
