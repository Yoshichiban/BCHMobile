<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bpocareerhub.bchmobile.SignupFirstLayerActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bchlogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bchlogo"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="65%"
        android:contentDescription="@string/logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:hint="First Name"
        android:layout_below="@+id/bchlogo"
        android:layout_alignLeft="@+id/bchlogo"
        android:layout_alignStart="@+id/bchlogo"
        android:layout_alignRight="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:textSize="16sp"
        android:paddingLeft="15sp"
        android:paddingBottom="15sp"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:hint="Last Name"
        android:layout_below="@+id/firstName"
        android:layout_alignLeft="@+id/bchlogo"
        android:layout_alignStart="@+id/bchlogo"
        android:layout_alignRight="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:textSize="16sp"
        android:paddingLeft="15sp"
        android:paddingBottom="15sp"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="E-mail Address"
        android:layout_below="@+id/lastName"
        android:layout_alignLeft="@+id/bchlogo"
        android:layout_alignStart="@+id/bchlogo"
        android:layout_alignRight="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:textSize="16sp"
        android:paddingLeft="15sp"
        android:paddingBottom="15sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/bchlogo"
        android:layout_alignStart="@+id/bchlogo"
        android:layout_alignRight="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:textSize="16sp"
        android:paddingLeft="15sp"
        android:paddingBottom="15sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobileNumber"
        android:hint="Mobile Number"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/bchlogo"
        android:layout_alignStart="@+id/bchlogo"
        android:layout_alignRight="@+id/bchlogo"
        android:layout_alignEnd="@+id/bchlogo"
        android:textSize="16sp"
        android:paddingLeft="15sp"
        android:paddingBottom="15sp"
        android:inputType="phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="#fff"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#51a460"
        android:layout_marginBottom="10sp" />


</android.support.percent.PercentRelativeLayout>
