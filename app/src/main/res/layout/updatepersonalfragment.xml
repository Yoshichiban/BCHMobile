<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:id="@+id/profileHeaderTV"
            android:text="@string/profileHeader"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullNameET"
            android:layout_below="@+id/profileHeaderTV"
            android:layout_toRightOf="@id/fullNameImageIV"
            android:textColor="@color/primary_text_default_material_light"
            android:hint="Full Name"
            android:inputType="text"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/fullNameImageIV"
            android:layout_below="@+id/profileHeaderTV"
            android:src="@drawable/name"
            android:layout_marginRight="10sp"
            android:layout_alignBottom="@+id/fullNameET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/genderET"
            android:layout_below="@+id/fullNameET"
            android:layout_toRightOf="@+id/genderIV"
            android:textColor="@color/primary_text_default_material_light"
            android:hint="Gender"
            android:inputType="text"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/genderIV"
            android:layout_below="@+id/fullNameImageIV"
            android:src="@drawable/gender"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_alignBottom="@+id/genderET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statusET"
            android:layout_below="@+id/genderET"
            android:layout_toRightOf="@+id/statusIV"
            android:textColor="@color/primary_text_default_material_light"
            android:hint="Marital Status"
            android:inputType="text"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/statusIV"
            android:layout_below="@+id/genderIV"
            android:src="@drawable/status"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_alignBottom="@+id/statusET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/birthdateET"
            android:layout_below="@+id/statusET"
            android:layout_toRightOf="@+id/birthdateIV"
            android:textColor="@color/primary_text_default_material_light"
            android:hint="Birthdate"
            android:inputType="date"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/birthdateIV"
            android:layout_below="@+id/statusIV"
            android:src="@drawable/birthdate"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_alignBottom="@+id/birthdateET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailET"
            android:layout_below="@+id/birthdateET"
            android:layout_toRightOf="@+id/emailIV"
            android:textColor="@color/primary_text_default_material_light"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/emailIV"
            android:layout_below="@+id/birthdateIV"
            android:src="@drawable/email"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_alignBottom="@+id/emailET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telNoET"
            android:layout_below="@+id/emailET"
            android:layout_toRightOf="@+id/telNoIV"
            android:textColor="@color/primary_text_default_material_light"
            android:hint="Telephone #"
            android:inputType="number"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/telNoIV"
            android:layout_below="@+id/emailIV"
            android:src="@drawable/telno"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_alignBottom="@+id/telNoET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cellNoET"
            android:layout_below="@+id/telNoET"
            android:layout_toRightOf="@+id/cellNoIV"
            android:textColor="@color/primary_text_default_material_light"
            android:hint="Cellphone #"
            android:inputType="phone"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/cellNoIV"
            android:layout_below="@+id/telNoIV"
            android:src="@drawable/cellno"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_alignBottom="@+id/cellNoET" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressET"
            android:layout_below="@+id/cellNoET"
            android:layout_toRightOf="@+id/addressIV"
            android:textColor="@color/primary_text_default_material_light"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/addressIV"
            android:layout_below="@+id/cellNoIV"
            android:src="@drawable/address"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_alignBottom="@+id/addressET" />

    </RelativeLayout>
</ScrollView>