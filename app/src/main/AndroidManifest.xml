<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bpocareerhub.bchmobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bchmobilelogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bpocareerhub.bchmobile.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bpocareerhub.bchmobile.LoginActivity"
            android:icon="@drawable/bchmobilelogo" />
        <activity android:name="com.bpocareerhub.bchmobile.JobActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bpocareerhub.bchmobile.MainActivity" />
        </activity>
        <activity android:name="com.bpocareerhub.bchmobile.ProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bpocareerhub.bchmobile.MainActivity" />
        </activity>
        <activity android:name="com.bpocareerhub.bchmobile.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bpocareerhub.bchmobile.MainActivity" />
        </activity>
        <activity android:name="com.bpocareerhub.bchmobile.SignupFirstLayerActivity" />
        <activity android:name="com.bpocareerhub.bchmobile.SignupSecondLayerActivity"></activity>
    </application>

</manifest>